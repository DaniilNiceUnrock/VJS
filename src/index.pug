extends ./main.layout.pug

block content
    .welcome-section(id = "welcome")
        section.hero 
            .container.hero__container
                header.header 
                    a.logo(href="#") PD
                    nav.menu  
                        nav.menu 
                            - var menuItems = [{title:'Обо мне', href: '#about'}, {title:'Навыки', href: '#skills'}, {title: 'Работы', href: '#works'}, {title: 'Отзывы', href: '#reviews'}];
                                ul.menu__list 
                                    each item in menuItems 
                                        li.menu__items 
                                            a(href=`${item.href}`).menu__link  #{item.title}

                    - var socials = [{title:'insta', href: 'instagram.com'}, {title:'vk', href: 'vk.com'}, {title: 'github', href: 'https://github.com/DaniilNiceUnrock/VJS'}, {title: 'envelope', href: 'https://github.com/DaniilNiceUnrock/VJS'}]; 
                        ul.socials 
                            each item in socials 
                                li.socials__item 
                                    a(href=`${item.href}` target="_blank").social__link
                                        +icon(item.title, "socials__icon")        

                    .hamburger 
                        +icon('hamburger', 'hamburger__icon')
                    .menu-hamburger 
                        .menu-hamburger__wrapper
                            button.ham-close-btn
                                +icon('close', 'ham-close-icon')
                            nav.menu_hamburger
                                ul.menu__list.menu__list--ham
                                    -
                                        const menuHam = {
                                            main: "Главная",
                                            about: "Обо мне", 
                                            skills: "Навыки", 
                                            works: "Работы", 
                                            reviews: "Отзывы"
                                        };

                                    each value, key in menuHam
                                        li.menu__item.menu__item--ham
                                            a(href=`#${key}`).menu__link.menu__link--ham #{value}
                    
                            ul.socials.hamburger__socials
                                -
                                    const socialHam = {
                                        insta: "https://www.instagram.com/", 
                                        vk: "https://www.facebook.com/", 
                                        github: "https://github.com/", 
                                        envelope: "mailto:mail@mail.com"
                                    };

                                each value, key in socialHam
                                    li.socials__item
                                        a(href=`${value}`).socials__link&attributes({'target': '_blank'})
                                            +icon(key, 'socials__icon')




                .userinfo 
                    .userinfo__title Личный сайт #[br] of the WEB-developer
                    .userinfo__name Daniil #[br] Ponomarev

                .hero__bottom-buttons   
                    a(href="#about").scrooll-down-btn Скролл
                    
        section.about(id="about") 
            .container.about__container 
                .about__user
                    .user 
                        .user__avatar 
                            .user__avatar-style 
                                +image("content/user.jpg", 'user__avatar-pic') 
                        -
                            var userInfo = [
                                ["Проживаю", "Екатеринбург"],
                                ["Возраст", "21 год"],
                                ["Родился", "13 августа 1998"],
                            ];
                        table.user__data
                            each item in userInfo   
                                tr.user__data-row 
                                    td.user__data-title  #{item[0]}
                                    td.user__data-content #{item[1]}
                .about__content 
                    .about__desc Привет, меня зовут
                    .about__title Даниил Пономарев
                    .about__text-info 
                        p Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                    .about__ps 
                        | Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. #[br]Чуть позже я освежу в нём свой контент. А пока посмотрите, #[br] как тут всё классно и красиво!
                        
    .middle-section
        .triangles.middle-section__triangles-top
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position-left
                polygon(points="0,0  0,100 1000,100")
            svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position-right
                polygon(points="0,100  1000,100 1000,0")

        section.values(id="skills")   
            .container.skills
                .values__title
                    .values__content
                        p.values__title-text Чем я могу быть полезен Вам
                        p.values__content-text Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
                .values__widget 
                    #skills-component
        section.works(id="works") 
            .container 
                .section_title.works__title Мои Работы
                .works__content     
                    #preview-component
                                
        .triangles.middle-section__triangles-bottom.triangles--pointed-down
                                svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position-left
                                    polygon(points="0,0  0,100 1000,100")
                                svg(viewBox="0 0 1000 100" preserveAspectRatio="none").triangles__shape.triangles__shape--position-right
                                    polygon(points="0,100  1000,100 1000,0")
    section.reviews(id="reviews")
        .container 
            #slider-component

    footer.footer
        .container
            .footer__content
                .footer__copy-name
                    .footer__copy © 2021
                    .footer__site-name
                        span.footer__name Даниил Пономарев
                        span Личный сайт<br/>веб-разработчика
                .footer__right
                    .footer__menu
                        nav.footer-nav
                            ul.footer-nav__list
                            - var menu = ["Главная", "Обо мне", "Навыки", "Работы", "Отзывы", "Связаться"]
                            each item in menu
                                li.footer-nav__item
                                    a.footer-nav__link(href='#') #{item}
                    .footer__social Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                        .footer-social-btns
                            - var icons = ['insta', 'vk', 'github']
                            ul.footer-socials
                            each item in icons
                                li.footer-socials__item
                                    a.footer-socials__link(href='#' target='_blank')
                                        +icon(`${item}`, 'social-icon ' + `${item}`)
                    .footer__quote Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                        span.footer__quote-author Martin Golding