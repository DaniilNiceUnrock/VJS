include ./mixins.pug
doctype html 
html(lang ="ru")
    head 
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width", inital-scale=1.0)
        title  Портфолио | main page 
    body
    .wrapper
        .maincontent 
            block content
                .welcome-section 
                section.hero 
                    .container.hero__container
                        header.header 
                            a.logo(href="#") PD
                            nav.menu
                                nav.menu 
                                    - var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
                                        ul.menu__list 
                                            each item in menuItems 
                                                li.menu__items 
                                                    a(href="#").menu__link  #{item}

                            - var socials = ["insta", "vk", "github", "envelope"]
                                ul.socials 
                                    each item in socials 
                                        li.socials__item 
                                            a(href="#").social__link
                                                +icon(item, "socials__icon")        

                        .userinfo 
                            .userinfo__title Личный сайт #[br] Web-developer's
                            .userinfo__name Daniil Ponomarev

                        .hero__bottom-buttons   
                            button.scrooll-down-btn Скролл1



                

